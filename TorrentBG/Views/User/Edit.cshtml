@model EditProfileFormModel
<div class="container" style="margin-top:70px">
        <div class="main-body">
            <form method="post">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                    <div class="mt-3">

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <form action="" class="edit-form">
                                <div class="input-box">
                                    <label asp-for="UserName"></label>
                                    <input type="text" placeholder="@Model.UserName" asp-for="UserName">
                                </div>
                                <hr class="form-hr">
                                <div class="input-box">
                                    <label asp-for="FullName"></label>
                                    <input type="text" placeholder="@Model.FullName" asp-for="FullName">
                                </div>
                                <hr class="form-hr">
                                <div class="input-box">
                                    <label asp-for="Email"></label>
                                    <input type="email" placeholder="@Model.Email" asp-for="Email">
                                </div>
                                <hr class="form-hr">
                                <div class="input-box">
                                    <label asp-for="PhoneNumber"></label>
                                    <input type="tel" placeholder="@Model.PhoneNumber" asp-for="PhoneNumber">
                                </div>
                                <hr class="form-hr">
                                <div class="input-box">
                                    <label asp-for="City"></label>
                                    <select class="form-control" asp-for="CityId">
                                        <option selected>None</option>
                                        @foreach (var city in Model.Cities)
                                        {
                                            <option value="@city.Id">@city.Name</option>
                                        }

                                    </select>
                                </div>
                                <input type="hidden" asp-for="Id" />
                                <hr class="form-hr">
                                <div class="file-input-box">
                                    <input type="file" id="myFile" name="filename">
                                </div>
                                <button class="btn btn-primary" type="submit">Save Changes</button>
                            </form>
                        </div>
                    </div>
            </form>
            
            </div>
        </div>
</div> 