@model ProfileViewModel
<div class="container .profileBody" >
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.UserName</h4>
                                <a asp-action="Edit" asp-route-Id="@Model.Id"><button class="btn btn-primary">Edit</button></a>
                                <button class="btn btn-outline-primary" onclick="DeleteEvent()"> Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Username</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.FullName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            @if (Model.PhoneNumber is null)
                            {
                                <div class="col-sm-9 text-secondary">
                                    Not choosed yet
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-9 text-secondary">
                                    @Model.PhoneNumber
                                </div>
                            }

                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">City</h6>
                            </div>
                            @if (Model.City is null)
                            {
                                <div class="col-sm-9 text-secondary">
                                    Not choosed yet
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-9 text-secondary">
                                   @Model.City
                                </div>
                            }
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                    </div>
                    <div class="col-sm-6 mb-3">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content" style="position:relative; height: 150px;">
        
            <h1 class="close" style="width: 15px; font-size: 40px; position: absolute; right: 10px; top:-10px;" onclick="CancelEvent()">&times;</h1>
            <p>Are you sure you want to delete your profile?</p>
            <button id="cancel" style="width: 150px; position: absolute; bottom: 30px; right: 300px; background-color: rgb(62, 62, 95); color:white; border: none; " onclick="CancelEvent()"> Cancel</button>
            <br>
            <input type="hidden" asp-for="Id" />
           
            <a  asp-action="Delete" asp-route-Id="@Model.Id"> <button class=" btn-outline-primary" style="width: 150px; position: absolute; bottom: 30px; left: 300px; border: none;"> Delete</button></a>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/main.js"></script>
}