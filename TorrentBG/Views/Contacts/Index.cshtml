@{
    ViewData["Title"] = "TorrentBG || Contact";
}

@model ContactFormModel
 <!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Contact</h2>
            <p>If you find any bug or want to join our team, just contact us!</p>
        </div>

        <div>
            <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
        </div>

        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>torrentBG@example.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>+1 5589 55488 55s</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                <form method="post" role="form">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Your Name" required>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Your Email" required>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" asp-for="Subject" id="subject" placeholder="Subject" required>
                        <span class="text-danger" asp-validation-for="Subject"></span>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message" required></textarea>
                        <span class="text-danger" asp-validation-for="Message"></span>
                    </div>

                    <!-- NOTIFICATION-->
                    <div class="my-3" style="display:none">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                    </div>
                    <div class="text-center"><button type="submit" class="btn-primary">Send Message</button></div>
                </form>




            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
  </main><!-- End #main -->

@section Scripts{
    <script src="./js/toast.js"></script>

    <script>
    if (@ViewBag.msg == "Success") {

        Toast.show("Message is sent", "success");
    }
    else {
        Toast.show("Message is not sent.Try again!", "error");
    }
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

}

@section Styles{

    <link rel="stylesheet" href="~/css/toastAlert.css">
}