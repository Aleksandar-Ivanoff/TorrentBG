@model CreateMovieFormModel

@{
    ViewData["Title"] = "TorrentBG || CreateMovie";
}
<!--Section-->
<section class="profileBody" style="margin-top: -50px;">
    <h1 style="display: flex; justify-content: center; margin-bottom: 20px; color:rgb(39, 89, 146);;">Add Movie</h1>
    <form method="post" class="add-torrent" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="torrent-title" style="display: flex; justify-content: center; align-items: center; position: relative; color: rgb(39, 89, 146);">
            <input type="text" asp-for="Name" id="torrentName" placeholder="Enter torrent name: ">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="img-container" style=" display: flex; justify-content: center; align-items: center; flex-direction: column;">
            <hr style="width: 50%;">
            <div style="width: 470px; height: 686px; border: 1px solid; background-color: white; display: flex; justify-content: center; align-items: center; flex-direction: column;">
                <h3>Choose Image</h3>
                <br>
                <input class="form-control" type="file" asp-for="Image">
            </div>
            <hr style="width: 50%;">
        </div>
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; width: 100%;">

            <h4>Release</h4>
            <input type="text" asp-for="Year" id="releaseDate" placeholder="Enter the year">
            <span asp-validation-for="Year" class="text-danger"></span>
            <h4>Length(min)</h4>
            <input type="text" asp-for="Length" id="lenght" placeholder="Enter Movie Length">
            <span asp-validation-for="Length" class="text-danger"></span>
            <h4>Director</h4>
            <input type="text" asp-for="DirectorName" id="movieDirector" placeholder="Enter Movie Director">
            <span asp-validation-for="DirectorName" class="text-danger"></span>

            <h4>Category</h4>
            <div id="DropDown">
                <select class="form-control" asp-for="CategoryId">
                    @foreach (var category in Model.Categories.Where(x=>x.Name == "Movies"))
                    {
                        <option value="@category.Id">@category.Name</option>
                    }

                </select>
            </div>

            <h4>Genre</h4>
            <div id="DropDown">
                <select class="form-control" asp-for="GenreId">
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }



                </select>
            </div>


            <h4>Main Actors</h4>
            <textarea asp-for="MainActors" id="movieActors" cols="30" rows="10" placeholder="Enter Movie Actors"></textarea>
            <span asp-validation-for="MainActors" class="text-danger"></span>


            <h4>Description</h4>
            <textarea asp-for="Description" id="review" cols="30" rows="10" placeholder="Enter Movie Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <br>
            <button type="submit">Add Movie</button>
            <hr style="width: 50%;">
        </div>

    </form>
</section>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}